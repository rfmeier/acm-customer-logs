{
	"name": "rfmeier/acm-customer-logs",
	"description": "Log WooCommerce customer orders using the Atlas Content Modeler php api.",
	"type": "project",
	"license": "GPL 2+",
	"authors": [
		{
			"name": "Ryan Meier",
			"email": "ryan.meier@wpengine.com",
			"homepage": "https://rfmeier.net",
      "role": "Developer"
		}
	],
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
		"php-parallel-lint/php-parallel-lint": "^1.3.2",
		"phpcompatibility/phpcompatibility-wp": "^2.1.3",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "~2.3"
	},
	"scripts": {
		"all": ["@lint", "@phpcs"],
		"lint": "parallel-lint -e php --no-colors --exclude vendor --exclude node_modules --exclude resources .",
		"phpcs": "phpcs",
		"phpcs:fix": "phpcbf"
	},
	"config": {
		"preferred-install": "dist",
		"sort-packages": true,
		"optimize-autoloader": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}